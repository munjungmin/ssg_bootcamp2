<?xml version="1.0" encoding="UTF-8"?>
<hibernate-configuration>
    <session-factory>
    	<property name="hibernate.dialect">org.hibernate.dialect.MySQL8Dialect</property>
    	<property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
    	<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/spring4</property>
    	<property name="hibernate.connection.username">spring4</property>
    	<property name="hibernate.connection.password">1234</property>
    	
    	<mapping class="com.sinse.hyberasync.model.FoodType"/>
    	<mapping class="com.sinse.hyberasync.model.Store"/>
    	
    </session-factory>
</hibernate-configuration>

