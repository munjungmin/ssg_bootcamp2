<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration SYSTEM "mybatis-3-config.dtd">
<configuration>
	<typeAliases>
		<typeAlias type="com.sinse.borderapp.model.Notice" alias="Notice"/>
		<typeAlias type="com.sinse.borderapp.model.News" alias="News"/>
		<typeAlias type="com.sinse.borderapp.model.Comment" alias="Comment"/>
	</typeAliases>
	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver" value="com.mysql.cj.jdbc.Driver" />
				<property name="url" value="jdbc:mysql://192.168.60.59:3306/spring4" />
				<property name="username" value="spring4" />
				<property name="password" value="1234" />
			</dataSource>
		</environment>
	</environments>
	<mappers>
		<mapper resource="com/sinse/borderapp/mybatis/NoticeMapper.xml" />
		<mapper resource="com/sinse/borderapp/mybatis/NewsMapper.xml" />
		<mapper resource="com/sinse/borderapp/mybatis/CommentMapper.xml" />
	</mappers>
</configuration>